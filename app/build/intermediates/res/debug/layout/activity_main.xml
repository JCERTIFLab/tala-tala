<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jcertif.relooking.MainActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
   >

    <include layout="@layout/toolbar"
       ></include>

    <android.support.v4.widget.SlidingPaneLayout
android:id="@+id/paletteContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/palette"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3"
       >

        <FrameLayout
            android:id="@+id/main_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background2"
        android:adjustViewBounds="true"
        android:layout_gravity="start"

        />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="8dp">

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floating_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/colorPrimary"
        fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
        fab:fab_addButtonPlusIconColor="@color/colorIcons"
        fab:fab_addButtonSize="normal"
        android:layout_gravity="bottom"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"

       >



 <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pick_yeux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/bouton8"
            android:layout_weight="0"
            fab:fab_title="Yeux"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/colorAccent"
             fab:fab_colorPressed="@color/colorPrimaryDark"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pick_bouche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            fab:fab_icon="@drawable/bouton1"
            fab:fab_stroke_visible   ="true"
            fab:fab_size="mini"
            fab:fab_title="Bouche"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            />


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pick_cheveux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            fab:fab_icon="@drawable/bouton5"
            fab:fab_size="normal"
            fab:fab_title="Cheveux"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pick_souliers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/bouton3"
            android:layout_weight="0"
            fab:fab_title="Souliers"
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            />



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/pick_robe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/bouton2"
            android:layout_weight="0"
            fab:fab_title="Habits"
            fab:fab_size="normal"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </LinearLayout>
    </FrameLayout>

    </android.support.v4.widget.SlidingPaneLayout>
</LinearLayout>


